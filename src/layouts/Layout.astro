---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Samba de Raiz UK" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <nav class="bg-samba-dark text-white p-4 sticky top-0 z-50">
          <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-xl font-bold text-samba-accent">Samba de Raiz UK</a>
            
            <ul class="flex space-x-6 items-center">
              <li><a href="#about" class="hover:text-samba-accent transition">About Us</a></li>
              <li><a href="#contact" class="hover:text-samba-accent transition">Contact</a></li>
              
              <li>
                <a href="https://eventbrite.co.uk" target="_blank" 
                   class="bg-samba-brand px-5 py-2 rounded-full font-bold hover:bg-samba-accent hover:text-samba-dark transition">
                   Buy Tickets
                </a>
              </li>
            </ul>
          </div>
        </nav>

        <slot />
	</body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #f3f4f6; /* This matches your 'samba-light' color */
    scroll-behavior: smooth; /* This makes the navigation glide instead of jump */
  }
  
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>